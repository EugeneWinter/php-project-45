#!/usr/bin/env php
<?php

declare(strict_types=1);

require __DIR__ . '/../vendor/autoload.php';

use function EugeneWinter\BrainGames\Engine\runGame;
use function EugeneWinter\BrainGames\Games\Progression\getProgressionDescription;
